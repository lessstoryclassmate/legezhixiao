{
    "name": "legezhixiao",
    "version": "1.0.0",
    "description": "乐格至效 AI小说创作平台 - 基于Copilot的智能写作助手",
    "keywords": [
        "ai",
        "novel",
        "writing",
        "copilot",
        "react",
        "typescript"
    ],
    "homepage": "https://github.com/lessstoryclassmate/legezhixiao",
    "repository": {
        "type": "git",
        "url": "https://github.com/lessstoryclassmate/legezhixiao.git"
    },
    "scripts": {
        "postinstall": "npm run setup",
        "setup": "npm run setup:frontend && npm run setup:backend",
        "setup:frontend": "cd frontend && npm install",
        "setup:backend": "cd backend && npm install",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run dev",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build",
        "test": "npm run test:frontend && npm run test:backend",
        "test:frontend": "cd frontend && npm test",
        "test:backend": "cd backend && npm test",
        "lint": "npm run lint:frontend && npm run lint:backend",
        "lint:frontend": "cd frontend && npm run lint",
        "lint:backend": "cd backend && npm run lint",
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "start:frontend": "cd frontend && npm run preview",
        "start:backend": "cd backend && npm start",
        "clean": "npm run clean:frontend && npm run clean:backend",
        "clean:frontend": "cd frontend && rm -rf node_modules dist",
        "clean:backend": "cd backend && rm -rf node_modules dist"
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}