# 环境变量配置文件
# 复制此文件为 .env 并填写实际值

# SiliconFlow API配置
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# JWT密钥
JWT_SECRET_KEY=your_jwt_secret_key_here

# MongoDB配置
MONGO_PASSWORD=your_mongodb_password_here

# Redis配置
REDIS_PASSWORD=your_redis_password_here

# 百度云数据库配置
MYSQL_HOST=your_baidu_cloud_mysql_host
MYSQL_PORT=3306
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=ai_novel_cloud

# 部署配置
DEPLOY_HOST=your_baidu_cloud_server_ip
DEPLOY_USER=ubuntu
DEPLOY_SSH_KEY_PATH=~/.ssh/id_rsa
