			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "启动完整开发环境（含ArangoDB）",
			"type": "shell",
			"command": "./scripts/start-pm2.sh",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "停止开发服务",
			"type": "shell",
			"command": "./scripts/stop-pm2.sh",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "启动PM2开发环境",
			"type": "shell",
			"command": "./scripts/start-pm2.sh",
			"group": "build",
			"isBackground": true,
