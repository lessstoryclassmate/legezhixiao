{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "启动前端开发服务器",
			"type": "shell",
			"command": "./scripts/start-frontend.sh",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "启动后端开发服务器",
			"type": "shell",
			"command": "./scripts/start-backend.sh",
			"group": "build",
			"isBackground": true,
			"problemMatcher": ["$tsc"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "启动完整开发环境",
			"type": "shell",
			"command": "./scripts/start-pm2.sh",
			"group": "build",
			"isBackground": true,
